<h2>Teacher for me 로그인하기</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "well") do |f| %>
  <div class="control-group">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls"><%= f.email_field :email %></div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => "control-label" %>
    <div class="controls"><%= f.password_field :password %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%>

  <div><%= f.submit "로그인하기", :class => "btn" %></div>
<% end %>

<%= render "links" %>
